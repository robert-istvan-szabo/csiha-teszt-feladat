@inherits LayoutComponentBase

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

<script>
    window.localStorageChangeDetection = {
        listenForChanges: function (key, dotnetHelper) {
            window.addEventListener("storage", function (event) {
                if (event.key === key) {
                    dotnetHelper.invokeMethodAsync("OnStorageChanged", event.newValue);
                }
            });
        }
    }
</script>

